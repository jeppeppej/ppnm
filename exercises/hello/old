CC = gcc # chosen compiler
CFLAGS = -0 -std=gnull # options for compiler
LDLIBS = -lm # libraries to link

default: out.txt
	cat out.txt # we want to show out.txt

out.txt: hello			#out.txt needs hello
	./hello > out.txt	#run hello, output into out.txt

hello: hello.o					# hello needs hello.o
	$(CC)  -o hello hello.o $(LDLIBS)	# link hello.o into hello

hello.o: hello.c			# hello.o needes hello. c
	$(CC) $(CFLAGS) -c hello.c	# compile hello.c

.PHONEY: clean
clean:					# clean is a phoney target
	$(RM) hello.o helle out.txt	# clean up the directory

.PHONEY: test
test:			# test target used for debugging
	echo $(LDLIBS)
	echo $(CC)
	echo $(RM)
